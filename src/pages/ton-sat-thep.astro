---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';
import ProductCard from '../components/ProductCard.astro';
import ProductModal from '../components/ProductModal.astro';

// Không cần import hình ảnh nữa, sử dụng đường dẫn public

// Import CSS toàn cục
import '../styles/global.css';

// Dữ liệu sản phẩm với thông tin đồng bộ
const products = [
  {
    id: 'ton-dong-a',
    title: 'Tôn Đông Á',
    image: '/images/ton-da.jpg',
    description: 'Tôn thương hiệu Đông Á uy tín, chất lượng cao, bảo hành chính hãng.',
    features: ['Thương hiệu uy tín', 'Chống ăn mòn tốt', 'Bảo hành chính hãng'],
    hasRealImage: true
  },
  {
    id: 'ton-hoa-sen',
    title: 'Tôn Hoa Sen',
    image: '/images/ton-hs.jpg',
    description: 'Tôn Hoa Sen chất lượng cao, độ bền vượt trội, giá cả hợp lý.',
    features: ['Thép mạ kẽm', 'Chống rỉ sét', 'Đa dạng kích thước'],
    hasRealImage: true
  },
  {
    id: 'sat-hop',
    title: 'Sắt Hộp',
    image: '/images/sat-hop.png',
    description: 'Sắt hộp vuông, chữ nhật chất lượng cao cho khung nhà kính, công trình.',
    features: ['Kích thước: 20x20 - 150x150', 'Độ dày: 1.2 - 6.0mm', 'Độ bền cao'],
    hasRealImage: true
  },
  {
    id: 'sat-nha-kinh',
    title: 'Sắt Nhà Kính',
    image: '/images/sat-nha-kinh.png',
    description: 'Khung sắt chuyên dụng cho nhà kính, chống ăn mòn, bền bỉ với thời tiết.',
    features: ['Mạ kẽm chống rỉ', 'Thiết kế chuyên dụng', 'Lắp đặt dễ dàng'],
    hasRealImage: true
  },
  {
    id: 'sat-uon',
    title: 'Sắt Uốn',
    image: '/images/sat-uon.jpg',
    description: 'Dịch vụ uốn sắt theo yêu cầu, chính xác, nhanh chóng.',
    features: ['Uốn theo thiết kế', 'Độ chính xác cao', 'Thời gian nhanh'],
    hasRealImage: true
  },
  {
    id: 'luoi-chan-con-trung',
    title: 'Lưới Chắn Côn Trùng',
    image: '/images/luoi-chan-con-trung.jpg',
    description: 'Lưới chống côn trùng cho nhà kính, vườn rau, bảo vệ cây trồng hiệu quả.',
    features: ['Mesh size đa dạng', 'Chống UV', 'Thông gió tốt'],
    hasRealImage: true
  },
  {
    id: 'sat-cam-coc-bong',
    title: 'Sắt Cắm Cọc Bông',
    image: '/images/sat-cam-coc-bong.jpg',
    description: 'Cọc sắt chuyên dụng cho trồng bông, hoa màu, chắc chắn và bền bỉ.',
    features: ['Chuyên dụng nông nghiệp', 'Chống gỉ sét', 'Nhiều kích cỡ'],
    hasRealImage: true
  },
  {
    id: 'nilon-nha-kinh',
    title: 'Nilon Nhà Kính',
    image: '/images/nilon-nha-kinh.jpg',
    description: 'Màng nilon chuyên dụng cho nhà kính, chống UV, giữ nhiệt tốt.',
    features: ['Độ trong suốt cao', 'Chống tia UV', 'Bền với thời tiết'],
    hasRealImage: true
  }
];
---

<MainLayout title="Tôn Sắt Thép Chất Lượng Cao - Khoa Lan">
  <Header />
  
  <!-- Hero Section -->
  <section class="hero-bg text-white">
    <div class="container mx-auto px-4 lg:px-8 h-screen flex items-center justify-center">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-7xl xl:text-8xl font-extrabold leading-tight mb-6">
          TÔN SẮT THÉP <span class="text-khoalan-yellow">CHẤT LƯỢNG CAO</span>
        </h1>
        <p class="text-lg md:text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          Cung cấp đa dạng các loại tôn sắt thép với chất lượng vượt trội, giá cả cạnh tranh nhất thị trường
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#products" class="bg-khoalan-yellow text-black font-bold py-3 px-8 rounded-full hover:bg-yellow-500 transition-all shadow-lg inline-block">
            Xem Sản Phẩm
          </a>
          <a href="/contact" class="border-2 border-white text-white font-bold py-3 px-8 rounded-full hover:bg-white hover:text-gray-900 transition-all inline-block">
            Liên Hệ Ngay
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <section class="bg-gray-100 py-4">
    <div class="container mx-auto px-4">
      <nav class="text-sm">
        <a href="/" class="text-blue-600 hover:text-blue-800">Trang chủ</a>
        <span class="mx-2 text-gray-500">/</span>
        <span class="text-gray-700">Tôn Sắt Thép</span>
      </nav>
    </div>
  </section>

  <!-- Products Section -->
  <section id="products" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Sản Phẩm <span class="text-khoalan-yellow">Tôn Sắt Thép</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Khoa Lan cung cấp đầy đủ các loại tôn sắt thép phục vụ mọi nhu cầu xây dựng
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map(product => (
          <ProductCard 
            id={product.id}
            title={product.title}
            image={product.image}
            description={product.description}
            features={product.features}
            hasRealImage={product.hasRealImage}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Advantages Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Tại Sao Chọn <span class="text-khoalan-yellow">Khoa Lan?</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Những ưu điểm vượt trội khi chọn sản phẩm tôn sắt thép của Khoa Lan
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Chất Lượng Cao</h3>
          <p class="text-gray-600">Sản phẩm đạt tiêu chuẩn quốc tế, độ bền vượt trội</p>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
              <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Giá Cạnh Tranh</h3>
          <p class="text-gray-600">Giá tốt nhất thị trường, nhiều chương trình ưu đãi</p>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Tư Vấn Chuyên Nghiệp</h3>
          <p class="text-gray-600">Đội ngũ kỹ thuật giàu kinh nghiệm, tư vấn tận tình</p>
        </div>

        <div class="text-center group">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Giao Hàng Nhanh</h3>
          <p class="text-gray-600">Giao hàng toàn quốc, nhanh chóng và an toàn</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Specifications Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Thông Số <span class="text-khoalan-yellow">Kỹ Thuật</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Chi tiết thông số kỹ thuật các sản phẩm tôn sắt thép
        </p>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow-lg overflow-hidden">
          <thead class="bg-blue-900 text-white">
            <tr>
              <th class="px-6 py-4 text-left">Loại Sản Phẩm</th>
              <th class="px-6 py-4 text-left">Độ Dày</th>
              <th class="px-6 py-4 text-left">Khổ Rộng</th>
              <th class="px-6 py-4 text-left">Chiều Dài</th>
              <th class="px-6 py-4 text-left">Ứng Dụng</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Tôn Lạnh</td>
              <td class="px-6 py-4">0.3 - 3.0mm</td>
              <td class="px-6 py-4">914, 1000, 1220mm</td>
              <td class="px-6 py-4">Theo yêu cầu</td>
              <td class="px-6 py-4">Mái nhà, vách ngăn</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Tôn Màu</td>
              <td class="px-6 py-4">0.35 - 0.8mm</td>
              <td class="px-6 py-4">914, 1000mm</td>
              <td class="px-6 py-4">2-12m</td>
              <td class="px-6 py-4">Mái nhà, trang trí</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Tôn Xốp</td>
              <td class="px-6 py-4">50 - 150mm</td>
              <td class="px-6 py-4">1000mm</td>
              <td class="px-6 py-4">2-12m</td>
              <td class="px-6 py-4">Cách nhiệt, âm</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Thép Thanh</td>
              <td class="px-6 py-4">Φ6 - Φ32</td>
              <td class="px-6 py-4">-</td>
              <td class="px-6 py-4">6-12m</td>
              <td class="px-6 py-4">Khung, cột</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Sắt Hộp</td>
              <td class="px-6 py-4">1.2 - 6.0mm</td>
              <td class="px-6 py-4">20x20 - 150x150</td>
              <td class="px-6 py-4">6-12m</td>
              <td class="px-6 py-4">Khung nhà kính</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Tôn Đông Á</td>
              <td class="px-6 py-4">0.35 - 0.8mm</td>
              <td class="px-6 py-4">914, 1000mm</td>
              <td class="px-6 py-4">2-12m</td>
              <td class="px-6 py-4">Mái nhà, công trình</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Lưới Chắn Côn Trùng</td>
              <td class="px-6 py-4">20-50 mesh</td>
              <td class="px-6 py-4">1-4m</td>
              <td class="px-6 py-4">100m/cuộn</td>
              <td class="px-6 py-4">Nhà kính, vườn rau</td>
            </tr>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-semibold">Nilon Nhà Kính</td>
              <td class="px-6 py-4">150-200 micron</td>
              <td class="px-6 py-4">4-12m</td>
              <td class="px-6 py-4">100m/cuộn</td>
              <td class="px-6 py-4">Phủ nhà kính</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Quy Trình <span class="text-khoalan-yellow">Đặt Hàng</span>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          4 bước đơn giản để đặt hàng tôn sắt thép tại Khoa Lan
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 text-black font-bold text-xl">
            1
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Liên Hệ Tư Vấn</h3>
          <p class="text-gray-600">Gọi điện hoặc nhắn tin để được tư vấn miễn phí</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 text-black font-bold text-xl">
            2
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Báo Giá</h3>
          <p class="text-gray-600">Nhận báo giá chi tiết và ưu đãi tốt nhất</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 text-black font-bold text-xl">
            3
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Đặt Hàng</h3>
          <p class="text-gray-600">Xác nhận đơn hàng và thanh toán thuận tiện</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-khoalan-yellow rounded-full flex items-center justify-center mx-auto mb-4 text-black font-bold text-xl">
            4
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Giao Hàng</h3>
          <p class="text-gray-600">Giao hàng nhanh chóng đến tận nơi</p>
        </div>
      </div>
    </div>
  </section>

  <CTA />
  <Footer />

  <!-- Product Modal Component -->
  <ProductModal />
</MainLayout> 